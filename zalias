alias grep='grep --color=auto'  ## grep coloring
#alias vi='/bin/vim'            ## vim instead of vi
alias ducks='du -cksh * | sort -hr | head -n 15'  ## sorting alias
alias pwgen='keepassxc-cli generate -lUnsL32 --exclude-similar'

